
@{
    ViewData["Title"] = "Index";
}

@model List<Todo>

<h1>Minhas Tarefas</h1>

<table width="100%" border="1">
    <thead>
        <tr>
            <th>Nome da Tarefa</th>
            <th>Concluída?</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model)
        {
            <tr>
                <td>@todo.Nome</td>
                <td>@(todo.Concluido ? "Sim" : "Não")</td>
            </tr>
        }
    </tbody>
</table>

<br />

<div>
    <a class="btn btn-primary" asp-controller="Todo" asp-action="New">Cadastrar Nova Tarefa</a>
</div>